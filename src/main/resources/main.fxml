<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.masnun.controllers.MainController">
    <children>
        <WebView fx:id="webView" maxWidth="600.0" minHeight="-1.0" minWidth="-1.0" prefHeight="369.0" prefWidth="600.0" />
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <children>
                <TextField fx:id="urlInput" prefHeight="48.0" prefWidth="390.0" />
                <Button fx:id="playButton" mnemonicParsing="false" onMouseClicked="#handlePlayButtonClick" prefHeight="48.0" prefWidth="111.0" text="Play" />
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0" />
    </children>
</VBox>
